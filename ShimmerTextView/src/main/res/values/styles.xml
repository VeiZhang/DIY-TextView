<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="KTVTextView">
        <attr name="originColor" format="color|reference"/>
        <attr name="fillTextColor" format="color|reference"/>
        <attr name="originForegroundColor" format="color|reference"/>
        <attr name="fillForegroundColor" format="color|reference"/>
        <attr name="direction" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="text" format="string|reference"/>
        <attr name="textSize" format="dimension|reference"/>
        <attr name="progress" format="float"/>
    </declare-styleable>

</resources>
